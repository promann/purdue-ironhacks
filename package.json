{
  "name": "bloggify-custom-app-template",
  "version": "1.0.2",
  "description": "A custom application built with @Bloggify.",
  "main": "bloggify.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_ENV=production bloggify start > output.log",
    "start:dev": "bloggify start"
  },
  "author": "Ionică Bizău <bizauionica@gmail.com> (http://ionicabizau.net)",
  "license": "MIT",
  "dependencies": {
    "bloggify-cli": "^1.0.0",
    "bloggify-config": "^1.0.6",
    "bloggify-custom-assets": "^1.0.2",
    "bloggify-flexible-router": "^1.0.0",
    "bloggify-mongoose": "^1.0.2",
    "bloggify-router": "^1.0.7",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-markdown": "^2.4.4",
    "react-md-editor": "^0.2.2"
  },
  "files": [
    "bin/",
    "app/",
    "lib/",
    "dist/",
    "src/",
    "resources/",
    "menu/",
    "scripts/",
    "cli.js",
    "index.js"
  ],
  "bugs": {
    "url": "https://github.com/BloggifyTutorials/custom-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BloggifyTutorials/custom-app.git"
  },
  "homepage": "https://github.com/BloggifyTutorials/custom-app#readme",
  "bloggify": {
    "bundles": {
      "auth": {
        "scripts": [
          "client/javascripts/private-router.js"
        ],
        "styles": [
          "src/css/auth.css"
        ]
      },
      "notAuth": {
        "scripts": [
          "client/javascripts/public-router.js"
        ]
      },
      "main": {
        "scripts": [
          "client/javascripts/common-router.js"
        ]
      }
    }
  },
  "blah": {
    "title": "Bloggify Custom App",
    "installation_command": {
      "content": [
        "# Clone this repository",
        "git clone https://github.com/BloggifyTutorials/custom-app",
        "",
        "# Install the dependencies",
        "cd custom-app && npm i",
        "",
        "# Start the app in dev mode",
        "npm run start:dev"
      ],
      "language": "bash"
    }
  }
}
